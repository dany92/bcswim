<%= form_for :response, :url => url_for(:id =>@survey.id, :action => "submitReponse") do |f| %>

<div class="survey">
<p><%=f.label "Survey Title: #{@survey.title}" %></p>
<p><%=f.label "Survey Date: #{@survey.date}" %></p>
<%= @surveyquestions.each do |sq| %>
	<p><%= f.label @questions.find(sq).context %></p>
	<%= f.hidden_field :question_id, :value => sq, multiple: true %>
	<p><%= f.text_area :responses, multiple: true %></p>
<% end %>
<%= f.submit "Submit", class: "btn-submit" %>
</div>
<% end %>
