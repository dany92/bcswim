<%= form_for (@survey) do |f| %>
<%=f.text_field :title, :placeholder => "Title"%>
<%=f.text_field :date %>
<%= fields_for :questions do |builder| %>

	<fieldset>
		<%= builder.label :context, "Question" %> <br />
		<%= builder.text_area :context %> <br />
		<%= builder.check_box :_destroy %>
		<%= builder.label :_destroy, "Remove Question" %>
	</fieldset>
<% end %>

<%end%>
