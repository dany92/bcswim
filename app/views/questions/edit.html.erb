<%= form_for (@question), :html => {:class => "form-horizontal center"} do |f| %>
<br />
<%=f.text_field :id, :placeholder => :id, :disabled => true, class: "form-control", type: "text"%> <br />

<%= f.select :category, options_for_select([ "Game", "Normal Workout" ]), {prompt: "Select Category"}, {class: "form-control"} %><br />

<%= f.text_area :context, :placeholder => :context, class: "form-control" %>

<br /><br />
<%= f.submit "Save Changes", class: "btn btn-primary" %>
<%end%>